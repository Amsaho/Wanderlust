<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
                 <h3><%=listing.title%></h3>
                    <div class="card listing-card" style="width: 18rem;">
                          <img src="<%=listing.image%>" class="card-img-top" alt="listing image">
                    <div class="card-body">
                        <p><%=listing.description%>
                        <br>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%>
                        <br>
                        <%=listing.location%>
                        <br>
                        <%=listing.country%>
                    </div>
                </div>
            <div class="btns">
                   <a href="/listing/<%=listing._id%>/edit" class="btn btn-success col-0">edit</a>
            <form 
                method="POST" 
               action="/listing/<%=listing._id%>?_method=DELETE">
               <button class="btn btn-danger col-0">delete</button>
            </form>
            </div>
        </div>
    <div>
        <hr>
    <h4>leave a review for listings</h4>
    <form method="POST" action="/listing/<%=listing.id%>/reviews" novalidate class="needs-validation">
        <div>
           <label class="form-label" for="rating">Rating</label>
           <input type="range" min="1" max="5" name=review[rating] id="ratingInput"required/>
        </div>
            <!-- <div class="rating">
                <i id="1" class="rating__star far fa-star"></i>
                <i id="2" class="rating__star far fa-star"></i>
                <i id="3" class="rating__star far fa-star"></i>
                <i id="4" class="rating__star far fa-star"></i>
                <i id="5" class="rating__star far fa-star"></i>
            </div> -->
    <div class="stars" id="starRating"></div>
        <div>
            <label for="comment" class="form-label">comment</label>
            <textarea  name=review[comment] class="form-control" cols="30" rows="5" required></textarea>
            <div class="invalid-feedback"> 
                please submit comments for reviews !!! your review is valuable for us
            
            </div>
        </div>
            <button class="btn btn-success col-2" type="submit">Submit</button>
    </form>
    <hr>
    <h4>all reviews</h4>
        <div class="row">
            <% for(review of listing.reviews){%>
                <div class="card col-5 ms-2 mb-3">
                    <div class="card-body">
                        <p class="card-text">Comment:<%= review.comment%></p>
                        <p class="card-text">Rating:<%= review.rating%>star</p>
                    </div>
                    <form method="POST" action="/listing/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"">
                        <button class="btn btn-sm btn-danger">delete</button>
                    </form>
                </div>
            <%}%>
        </div>
</body>
